{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "Metrics",
			"Effect": "Allow",
			"Action": [
				"dynamodb:BatchGetItem",
				"dynamodb:BatchWriteItem",
				"dynamodb:PutItem",
				"dynamodb:GetItem",
				"dynamodb:Scan",
				"dynamodb:Query",
				"dynamodb:UpdateItem"
			],
			"Resource": [
				"arn:aws:dynamodb:*:*:table/metrics",
				"arn:aws:dynamodb:*:*:table/metrics/index/*"
			]
		}
	]
}